<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <%- include('partials/header.ejs') %>
    <main>
      <h1>Welcome to the Blogs</h1>

      <h2>Posts</h2>
      <% if (posts.length === 0) { %>
      <p>No posts dude.</p>
      <% } else { %>
      <div class="posts">
        <% posts.forEach((post) => { %>
        <div class="post">
          <h3><%= post.title%></h3>
          <small><%= post.date %></small>
          <p><%= post.content %></p>
          <small><%= post.author %></small>
          <form action="/posts/delete/<%= post.id %>" method="get">
            <input type="submit" value="Delete" class="btn delete" />
          </form>
          <form action="/posts/edit/<%= post.id %>" method="get">
            <input type="submit" value="Edit" class="btn edit" />
          </form>
        </div>
      
      <% }); %> </div><% }; %>
    </main>
    <%- include('partials/footer.ejs') %>
  </body>
</html>
