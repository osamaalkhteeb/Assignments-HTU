<%- include("partials/header.ejs") %>
<div class="tab-content" id="myTabContent">
  <div
    class="tab-pane fade show active"
    id="home-tab-pane"
    role="tabpanel"
    aria-labelledby="home-tab"
    tabindex="0"
  >
    <div class="form-parent">
      <form
        class="form"
        action="/api/users"
        method="POST"
        onsubmit="return validate()"
      >
        <span>Register</span>
        <label for="name">Full Name </label>
        <input
          type="text"
          id="name"
          name="name"
          placeholder="enter your Full Name please"
        />

        <p id="massegeError1" style="color: red"></p>

        <label for="email">Email </label>
        <input
          type="email"
          id="email"
          name="email"
          placeholder="enter your email please"
        />

        <p id="massegeError3" style="color: red"></p>

        <label for="phonenum">Phone Number </label>
        <input
          type="phonenum"
          id="phonenum"
          name="phonenum"
          placeholder="enter your Phone number please"
          maxlength="10"
          minlength="10"
        />

        <p id="massegeError4" style="color: red"></p>

        <label for="gender">Gender </label>

        <select id="gender" name="gender">
          <option value="">Select Gender</option>
          <option value="Male">Male</option>
          <option value="Female">Female</option>
          <option value="Other">Other</option>
        </select>

        <p id="massegeError5" style="color: red"></p>

        <label for="address">Address </label>
        <textarea
          id="address"
          name="address"
          placeholder="Enter your address please"
        ></textarea>

        <p id="massegeError2" style="color: red"></p>
        <button type="submit">Add User</button>
      </form>
    </div>
  </div>
  <div
    class="tab-pane fade"
    id="profile-tab-pane"
    role="tabpanel"
    aria-labelledby="profile-tab"
    tabindex="0"
  >
    <div>
      <div class="main-table">
        <div class="table-responsive table-div">
          <table
            class="table table-striped table-hover"
            id="table"
            style="display: block"
          >
            <thead>
              <tr>
                <th>Name</th>
                <th>Address</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Gender</th>
              </tr>
            </thead>
            <tbody>
              <% users.forEach((user) => { %>
              <tr>
                <td><%= user.name %></td>
                <td><%= user.address %></td>
                <td><%= user.email %></td>
                <td><%= user.phonenum %></td>
                <td><%= user.gender %></td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>

      <div id="card" style="display: none">
        <div class="container">
          <div
            class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4"
            id="rowCard"
          >
            <!-- الكروت رح تنضاف هون -->
          </div>
        </div>
      </div>

      <div class="d-flex justify-content-center my-4">
        <button id="toggleViewBtn" class="btn btn-primary">View Users</button>
      </div>
    </div>
  </div>
</div>

<%- include("partials/footer.ejs") %>

